{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@components": ["src/components"],
      "@widgets/*": ["src/widgets/*"],
      "@request": ["src/request"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@config": ["src/common-config"],
      "@tools/*": ["src/tools/*"],
    },
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "node_modules/**/*"]
}